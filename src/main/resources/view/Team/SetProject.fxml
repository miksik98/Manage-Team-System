<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="300.0" styleClass="vbox-style"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="pl.edu.agh.pierogi.controller.TeamProjectController">
    <bottom>
        <HBox>
            <Button fx:id="setButton" alignment="CENTER" mnemonicParsing="false"
                    onAction="#handleSetAction" styleClass="button-style" text="Set" textFill="#045061"
                    GridPane.rowIndex="2">
                <HBox.margin>
                    <Insets bottom="30.0" left="120.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <stylesheets>
        <URL value="@../vstyle.css"/>
    </stylesheets>
    <center>
        <TableView fx:id="projectsTable" prefHeight="200.0" prefWidth="284.0" styleClass="table-style"
                   BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="projectTopic" prefWidth="139.0" styleClass="column-style" text="Name"/>
                <TableColumn fx:id="projectTeamsAmount" prefWidth="149.0" styleClass="column-style"
                             text="Teams Number"/>
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>
