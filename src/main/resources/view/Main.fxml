<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="600.0" styleClass="vbox-style" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.pierogi.controller.MainController">
    <center>
        <VBox prefHeight="536.0" prefWidth="600.0" styleClass="vbox-style" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="peopleButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handlePeopleAction" prefHeight="33.0" prefWidth="108.0" styleClass="button-style"
                        text="PEOPLE">
                    <VBox.margin>
                        <Insets bottom="10.0" left="258.0" right="50.0" top="32.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Button>
                <Button fx:id="projectsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleProjectsAction" styleClass="button-style" text="PROJECTS">
                    <VBox.margin>
                        <Insets bottom="10.0" left="258.0" right="50.0" top="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Button>
                <Button fx:id="teamsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleTeamsAction" prefHeight="33.0" prefWidth="110.0" styleClass="button-style"
                        text="TEAMS">
                    <VBox.margin>
                        <Insets bottom="8.0" left="258.0" right="50.0" top="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Button>
                <Button fx:id="teamsButton1" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleRankAction" prefHeight="33.0" prefWidth="110.0" styleClass="button-style"
                        text="RANK" textAlignment="CENTER">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="8.0" left="258.0" right="50.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="reportsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleReportsAction" prefHeight="33.0" prefWidth="110.0" styleClass="button-style"
                        text="REPORTS" textAlignment="CENTER">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="8.0" left="258.0" right="50.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="emailsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleEmailsAction" prefHeight="33.0" prefWidth="110.0" styleClass="button-style"
                        text="EMAILS" textAlignment="CENTER">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="258.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="importButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#handleImportAction" prefHeight="33.0" prefWidth="110.0" styleClass="button-style"
                        text="IMPORT" textAlignment="CENTER">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="8.0" left="258.0" right="50.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                           BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@../project-management.png"/>
                    </image>
                    <VBox.margin>
                        <Insets bottom="50.0" left="236.0" right="30.0" top="40.0"/>
                    </VBox.margin>
                </ImageView>
            </children>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@vstyle.css"/>
    </stylesheets>
    <top>
        <Text fill="#b1d4e0" strokeWidth="0.0" text="PROJECTS AND TEAMS MANAGEMENT" BorderPane.alignment="CENTER">
            <font>
                <Font size="22.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="50.0" right="30.0" top="40.0"/>
            </BorderPane.margin>
        </Text>
    </top>
</BorderPane>
